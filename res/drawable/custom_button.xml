<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#696969"
                android:endColor="#2f4f4f"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#bebebe" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dip"
                android:top="10dip"
                android:right="10dip"
                android:bottom="10dip" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#8470ff"
                android:startColor="#483d8b"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#bebebe" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dip"
                android:top="10dip"
                android:right="10dip"
                android:bottom="10dip" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#0000ff"
                android:startColor="#000080"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#bebebe" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dip"
                android:top="10dip"
                android:right="10dip"
                android:bottom="10dip" />
        </shape>
    </item>
</selector>